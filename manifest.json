{
	"name": "Mediadrop",
	"id": "mediadrop",
	"packaging_format": 1,
	"description": {
		"en": "Mediadrop - The Web’s Open Source Video Platform",
		"fr": "Mediadrop - Plateforme web vidéo Open Source"
	},
	"version": "0.10.3~ynh1",
	"url": "http://mediadrop.video/",
	"license": "free",
	"maintainer": {
		"name": "cyp",
		"email": "cyp@rouquin.me"
	},
	"requirements": {
        "yunohost": ">= 2.7.14"
	},
	"multi_instance": false,
	"services": [
		"nginx",
		"python",
		"mysql"
	],
	"arguments": {
		"install" : [
			{
				"name": "domain",
				"type": "domain",
				"ask": {
					"en": "Choose a domain name for MediaDrop",
					"fr": "Choisissez un nom de domaine pour MediaDrop"
				},
                "example": "example.com"
			},
			{
				"name": "path",
				"type": "path",
				"ask": {
					"en": "Choose a path for MediaDrop",
					"fr": "Choisissez un chemin pour MediaDrop"
				},
				"example": "/mediadrop",
				"default": "/mediadrop"
			},
			{
				"name": "admin",
				"type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l’administrateur"
                },
				"example": "johndoe"
			},
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
			}
		]
	}
}