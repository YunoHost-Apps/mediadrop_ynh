{
	"name": "Mediadrop",
	"id": "mediadrop",
	"packaging_format": 1,
	"description": {
		"en": "Mediadrop - The Web’s Open Source Video Platform",
		"fr": "Mediadrop - Plateforme web vidéo Open Source"
	},
	"version": "1.1.0",
	"url": "http://mediadrop.video/",
	"license": "free",
	"maintainer": {
		"name": "cyp",
		"email": "cyp@rouquin.me"
	},
	"requirements": {
		"yunohost": ">> 2.4.0"
	},
	"multi_instance": false,
	"services": [
		"nginx",
		"python",
		"mysql"
	],
	"arguments": {
		"install" : [
			{
				"name": "domain",
				"type": "domain",
				"ask": {
					"en": "Choose a domain name for MediaDrop",
					"fr": "Choisissez un nom de domaine pour MediaDrop"
				},
				"example": "example.org"
			},
			{
				"name": "path",
				"type": "path",
				"ask": {
					"en": "Choose a path for MediaDrop",
					"fr": "Choisissez un chemin pour MediaDrop"
				},
				"example": "/mediadrop",
				"default": "/mediadrop"
			},
			{
				"name": "admin",
				"type": "user",
				"ask": {
					"en": "Choose the MediaDrop administrator (must be an existing YunoHost user)",
					"fr": "Administrateur du site (doit être un utilisateur YunoHost existant)"
				},
				"example": "johndoe"
			},
			{
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public umap site ?",
                    "fr": "Est-ce un site public ?"
                },
                "choices": ["1", "0"],
                "default": "1"
			}
		]
	}
}
